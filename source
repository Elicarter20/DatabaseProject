PRAGMA foreign_keys = ON;
BEGIN TRANSACTION;

/* Create a table called STUDENTS */
CREATE TABLE STUDENTS(studentID integer PRIMARY KEY, LNAME text, FNAME text);
/* Create records for STUDENTS*/
INSERT INTO STUDENTS VALUES(0277616,'Cruise','Tom');
INSERT INTO STUDENTS VALUES(0266312,'Liu','Lucy');
INSERT INTO STUDENTS VALUES(0200101,'Sinatra','Frank');
INSERT INTO STUDENTS VALUES(0232445,'Qo','Qane');
INSERT INTO STUDENTS VALUES(0273222,'DeNiro','Robert');

/* Create a table called COURSES */
CREATE TABLE COURSES(courseID integer PRIMARY KEY, courseDepartment text, courseName text, courseSemester text, courseYear int);

/* Create records for COURSES*/
INSERT INTO COURSES VALUES(101,'CS','Software','FAL',2018);
INSERT INTO COURSES VALUES(102,'CS','Algorithms','SPR',2019);
INSERT INTO COURSES VALUES(333,'Math','Calc II','FAL',2018);
INSERT INTO COURSES VALUES(432,'Math','Calc II','SPR',2019);
INSERT INTO COURSES VALUES(500,'Bio','Orgo','SPR',2019);


/* Create a table called ENROLLMENTS */
CREATE TABLE ENROLLMENTS(enrollmentID integer PRIMARY KEY,
    courseID integer, studentID integer,
    FOREIGN KEY(courseID) REFERENCES COURSES(courseID),
    FOREIGN KEY(studentID) REFERENCES STUDENTS(studentID));

/* Create records for ENROLLMENTS*/
INSERT INTO ENROLLMENTS VALUES(1,101,0277616);
INSERT INTO ENROLLMENTS VALUES(2,101,0266312);
INSERT INTO ENROLLMENTS VALUES(3,101,0200101);
INSERT INTO ENROLLMENTS VALUES(4,102,0232445);
INSERT INTO ENROLLMENTS VALUES(5,102,0273222);

/* Create a table called ASSIGNMENTS */
CREATE TABLE ASSIGNMENTS(assignmentID integer PRIMARY KEY,
    assignmentType text, courseID integer, percent float,
    FOREIGN KEY(courseID) REFERENCES COURSES(courseID));

/* Create records for ASSIGNMENTS*/
INSERT INTO ASSIGNMENTS VALUES(1,'homework',101,0.2);
INSERT INTO ASSIGNMENTS VALUES(2,'homework',101,0.2);
INSERT INTO ASSIGNMENTS VALUES(3,'test',101,0.5);
INSERT INTO ASSIGNMENTS VALUES(4,'test',101,0.5);
INSERT INTO ASSIGNMENTS VALUES(5,'participation',101,0.1);
INSERT INTO ASSIGNMENTS VALUES(6,'project',101,0.2);

/* Create a table called GRADES */
CREATE TABLE GRADES(assignmentID integer,
    enrollmentID integer, grade integer,
    FOREIGN KEY(assignmentID) REFERENCES ASSIGNMENTS(assignmentID),
    FOREIGN KEY(enrollmentID) REFERENCES ENROLLMENTS(enrollmentID));

/* Create records for ASSIGNMENTS*/
INSERT INTO GRADES VALUES(1,1,100);
